<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>

	<system.serviceModel>
		<bindings>
			<netTcpBinding>
				<binding
					name="StreamingBinding"
					transferMode="Streamed"
					maxReceivedMessageSize="6710884"
					maxBufferSize="65536"
					receiveTimeout="00:10:00"
					sendTimeout="00:10:00">
				</binding>
			</netTcpBinding>
		</bindings>
	</system.serviceModel>

	<system.serviceModel>
		<services>
			<service name="Service.ChargingService">
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:4002"/>
					</baseAddresses>
				</host>
				<endpoint
					address ="ChargingService"
					binding="netTcpBinding"
					bindingConfiguration="StreamingBinding"
					contract="Common.IChargingService" />
			</service>
		</services>
	</system.serviceModel>
</configuration>